<h2>管理人とのチャット</h2>
<div id="chats">
<% @chats.each do |chat|%>
  <%if chat.isAdmin%>
    <div class="balloon6">
    <div class="faceicon">
     <img src="/assets/admin.png" alt="管理人">
    </div>
    <div class="chatting">
      <div class="says">
        <p><%=chat.sentence%></p>
      </div>
    </div>
  </div>
    <%else%>
    <div class="mycomment">
    <p>
    <%=chat.sentence%>
    </p>
  </div>
    <%end%>
    <%end%>
</div>   
<h3>チャット送信</h3>
<form>
  <label>送りたい内容を入力してね</label><br>
  <input type="text" data-behavior="room_speaker_student">
  <input id="user_id_student" type="hidden" value= "<%=current_user.id%>" value2= "<%=current_user.admin%>">
</form>
