<h2>教室一覧</h2>
<table class="table table-bordered">
<tbody>
<% @classrooms.each do |classroom|%>
<tr>
  <td scope="row"><%=classroom.name%></td>
  <td scope="row">
  <div class="other-btn">
      <%=link_to("/admin/classrooms/#{classroom.id}",method: :delete) do%>
      <button type="button" class="btn" style="background-color:rgba(153,204,255,.5)">削除する</button>
      <%end%>
      </div>
  </td>
</tr>  
<%end%>
</tbody>
</table>

<%=paginate @classrooms%>
<div class="other-btn">
<%=link_to "/admin/classrooms/new" do%>
  <button type="button" class="btn">新規作成</button>
<%end%>
</div>





